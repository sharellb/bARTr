<div class="center">
	<h2>Update profile</h2>

	<%= form_for @user, url: update_user_path do |f| %>

	<div><%= f.label :about %><br />
      <%= f.text_area :about, autofocus: true, :rows=>5 %></div>
    
    <div><%= f.label "I'm looking for..." %><br />
      <%= f.text_area :long_request, autofocus: true, :rows=>5 %></div>

	<h3>Social Media</h3>
	  <div><%= f.label :facebook %><br />
	  <%= f.text_field :facebook, autofocus: true %></div>

	  <div><%= f.label :dribble %><br />
      <%= f.text_field :dribble, autofocus: true %></div>

      <div><%= f.label :website %><br />
      <%= f.text_field :website, autofocus: true %></div>

      <div><%= f.label :linkedin %><br />
      <%= f.text_field :linkedin, autofocus: true %></div>

      <div><%= f.label :soundcloud %><br />
      <%= f.text_field :soundcloud, autofocus: true %></div>

      <div><%= f.label :github %><br />
      <%= f.text_field :github, autofocus: true %></div>

	  <div><%= f.submit "Update" %></div>
	<% end %>

</div>