<div class="center">
	<h1><%= @user.profile_name %></h1>
	<div class="text-block">
		<div><%= image_tag @user.gravatar_url %></div>
		<% if current_user %>
			<button class="btn"><%= link_to "Edit profile", "/#{@user.profile_name}/edit" %></button>
		<% else %>
			<button class="btn"><%= link_to "Send #{@user.profile_name} a message", '/messages/new' %></button>
		<% end %>


		<div class="links">
			<ul>
			<% if !@user.facebook.empty? %>
				<li><%= link_to 'Facebook', "http://#{@user.facebook}" %></li>
			<% end %>
			
			<% if !@user.linkedin.empty? %>
				<li><%= link_to 'Linkedin', "http://#{@user.linkedin}" %></li>
			<% end %>
			
			<% if !@user.dribble.empty? %>
				<li><%= link_to 'Dribbble', "http://#{@user.dribble}" %></li>
			<% end %>
			
			<% if !@user.website.empty? %>
				<li><%= link_to 'Website', "http://#{@user.website}" %></li>
		    <% end %>
		</div>
    </div>
</div>
